<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/gap_small"
    android:layout_marginBottom="@dimen/gap_small">

    <!-- Image Profile -->
    <ImageView
        android:id="@+id/view_item_profile_horizontal_image"
        android:layout_width="@dimen/image_size_profile"
        android:layout_height="@dimen/image_size_profile"
        android:contentDescription="@string/desc_image_profile_with_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/view_item_profile_horizontal_name"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Profile Name -->
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/view_item_profile_horizontal_name"
        style="@style/ItemStyle.Horizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/image_size_profile"
        android:layout_marginStart="@dimen/gap_normal"
        app:layout_constraintLeft_toRightOf="@id/view_item_profile_horizontal_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>